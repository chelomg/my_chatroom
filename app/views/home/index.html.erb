<div class="row">
  <div class="col-md-9">
    <ul id="invites-list">
    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary friend-request-list">
      <div class="panel-heading">
        <h3 class="panel-title">Friend Request list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @request_users.each do |user| %>
            <li><%= link_to user.email, bottle_conversation_path(user), remote: true %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="panel panel-primary friend-list">
      <div class="panel-heading">
        <h3 class="panel-title">Friend list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @friends.each do |friend| %>
            <li><%= link_to friend.email, conversation_path(friend), remote: true %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div>
      <%= link_to "新增瓶子", messages_new_path, class: "btn btn-info" %>
      <%= link_to "登出", destroy_user_session_path, class: "btn btn-default", method: :delete%>
    </div>
  </div>
</div>


<div class="chat-div">
  <div class="row">
    <div class="col-md-9">
      <ul id="conversations-list">
        <% @conversations.each do |conversation| %>
          <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
        <% end %>
      </ul>
    </div>

    <div class="col-md-3">
    </div>
  </div>
</div>


